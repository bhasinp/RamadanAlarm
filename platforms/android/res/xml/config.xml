<?xml version='1.0' encoding='utf-8'?>
<widget id="de.appplant.localnotification.example" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Toast">
        <param name="android-package" value="nl.xservices.plugins.Toast" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="LocalNotification">
        <param name="android-package" value="de.appplant.cordova.plugin.localnotification.LocalNotification" />
    </feature>
    <name>Ramadan Alarm</name>
    <description>
       Ramadan Alarm application to remind you at the right time.
    </description>
    <author email="into@initto.ca" href="http://www.initto.ca">
        Initto IT Consulting Inc.
    </author>
    <content src="default.html" />
    <access origin="*" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="7" />
    <preference name="android-installLocation" value="auto" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.device" />
    <gap:plugin name="de.appplant.cordova.common.registerusernotificationsettings" />
    <gap:plugin name="de.appplant.cordova.plugin.local-notification" />
    <gap:plugin name="nl.x-services.plugins.toast" />
    <icon gap:platform="android" gap:qualifier="ldpi" src="www/img/logo.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="www/img/logo.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="www/img/logo.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="www/img/logo.png" />
    <icon gap:platform="blackberry" src="www/img/logo.png" />
    <icon gap:platform="blackberry" gap:state="hover" src="www/img/logo.png" />
    <icon gap:platform="ios" height="57" src="www/img/logo.png" width="57" />
    <icon gap:platform="ios" height="72" src="www/img/logo.png" width="72" />
    <icon gap:platform="ios" height="114" src="www/img/logo.png" width="114" />
    <icon gap:platform="ios" height="144" src="www/img/logo.png" width="144" />
</widget>
